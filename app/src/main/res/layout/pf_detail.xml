<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:id="@+id/pf_detail"
    android:background="@color/graytxt"
    android:layoutDirection="rtl">


    <EditText
        android:id="@+id/pf_detail_detail"
        android:background="@drawable/btn_corner_n"
        android:autofillHints=""
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:hint="@string/explain"
        android:singleLine="true"
        android:inputType="text"
        android:focusable="true">


    </EditText>


    <Button
        android:id="@+id/pf_detail_btn"
        android:layout_width="250dp"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:layout_height="50dp"

        android:theme="@style/MyButton"
        android:text="@string/insert_prefactor"
        android:background="@drawable/btn_corner"

        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="#ffffff" />

</androidx.appcompat.widget.LinearLayoutCompat>